<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#493189"
    tools:context=".SecondPlanet">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/prolottie"
        android:layout_width="wrap_content"
        android:layout_height="305dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:visibility="visible"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/plu" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Name of planet"
        android:id="@+id/first"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:padding="18dp"
        android:textSize="14dp"
        android:background="@drawable/buttonbackground"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        >
    </EditText>

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Number of moons"
        android:id="@+id/second"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:padding="18dp"
        android:layout_gravity="center"
        android:inputType="number"
        android:textSize="14dp"
        android:background="@drawable/buttonbackground"
        android:layout_marginTop="20dp"
        >
    </EditText>





                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="60dp"
                    >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Habital"
                    android:id="@+id/radiobutton"
                    android:textColor="#fff"

                    >
                </RadioButton>

                <RadioButton
                    android:layout_marginLeft="35dp"
                    android:layout_width="wrap_content"
                    android:id="@+id/radiobutton2"
                    android:layout_height="wrap_content"
                    android:text="Non-Habitable"
                    android:textColor="#fff"
                    >
                </RadioButton>
            </RadioGroup>






    <Button
        android:layout_width="250dp"

        android:layout_height="50dp"
        android:background="@drawable/buttonbackground"
        android:textColor="#fff"
        android:text="Submit Data"
        android:id="@+id/submit"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"

        >

    </Button>
</LinearLayout>